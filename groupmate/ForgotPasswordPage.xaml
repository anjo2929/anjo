<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupmate.ForgotPasswordPage"
             BackgroundColor="#F5E9FF">

    <ScrollView>
        <VerticalStackLayout Padding="30,60" Spacing="25">

            <ImageButton x:Name="BackButton"
                         Source="back.png"
                         HeightRequest="24"
                         WidthRequest="24"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start" />

            <Label x:Name="TitleLabel"
                   Text="Forgot your password?"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#3D0066"
                   HorizontalOptions="Center" />

            <Label x:Name="SubtitleLabel"
                   Text="Please enter your email address to receive a verification code"
                   FontSize="14"
                   TextColor="#5A5A5A"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>

            <Image x:Name="IllustrationImage"
                   Source="niggaman.png"
                   HeightRequest="200"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <Border x:Name="EmailBorder"
                    Stroke="#E0E0E0" 
                    StrokeShape="RoundRectangle 25"
                    BackgroundColor="White" 
                    Padding="10">
                
                <Grid ColumnDefinitions="Auto,*" 
                      VerticalOptions="Center">
                    
                    <Image x:Name="EmailIcon"
                           Source="profile.png" 
                           HeightRequest="20" 
                           VerticalOptions="Center"/>
                    
                    <Entry x:Name="EmailEntry"
                           Grid.Column="1" 
                           Placeholder="example@gmail.com"
                           PlaceholderColor="#999" 
                           TextColor="Black"
                           FontSize="16" 
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <HorizontalStackLayout
                
                       x:Name="SignInLinkLayout"
                       HorizontalOptions="Center">
                
                <Label x:Name="RememberPasswordLabel"
                       Text="Remember Password?"
                       FontSize="14"
                       TextColor="#6A0DAD"/>
                
                <Label x:Name="SignInLabel"
                       Text=" Sign In"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#7F00FF">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer 
                            Tapped="SignIn_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Border x:Name="SendButtonBorder"
                    StrokeShape="RoundRectangle 25" 
                    StrokeThickness="0">
                
                <Border.Background>
                    
                    <LinearGradientBrush EndPoint="1,0">
                        
                        <GradientStop 
                            Color="#9638E0" Offset="0.0"/>
                        <GradientStop 
                            Color="#7F00FF" Offset="1.0"/>
                        
                    </LinearGradientBrush>
                    
                </Border.Background>
                <Button x:Name="SendButton"
                        Text="SEND"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
