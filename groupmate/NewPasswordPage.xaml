<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupmate.NewPasswordPage"
             BackgroundColor="#F5E9FF">

    <ScrollView>
        <VerticalStackLayout Padding="30,60" Spacing="25">


            <ImageButton Source="back.png"
                         HeightRequest="24"
                         WidthRequest="24"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start" />


            <Label Text="Enter new password"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#3D0066"
                   HorizontalOptions="Center" />

            <Label Text="Please enter a new password"
                   FontSize="14"
                   TextColor="#5A5A5A"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10"/>


            <Image Source="loptopnisteve.png"
                   HeightRequest="220"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>


            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 25"
                    BackgroundColor="White"
                    Padding="10">
                <Grid ColumnDefinitions="Auto,*"
                      VerticalOptions="Center">
                    <Image Source="lock.png"
                           HeightRequest="20"
                           VerticalOptions="Center"/>
                    <Entry Grid.Column="1"
                           Placeholder="New Password"
                           IsPassword="True"
                           PlaceholderColor="#999"
                           TextColor="Black"
                           FontSize="16"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

    
            <Label Text="Use 8 or more characters with a mix of letters, numbers, and symbols."
                   FontSize="12"
                   TextColor="#6A6A6A"
                   HorizontalOptions="Start"
                   Margin="10,0,0,0"/>


            <Border Stroke="#E0E0E0"
                    StrokeShape="RoundRectangle 25"
                    BackgroundColor="White"
                    Padding="10">
                <Grid ColumnDefinitions="Auto,*"
                      VerticalOptions="Center">
                    <Image Source="lock.png"
                           HeightRequest="20"
                           VerticalOptions="Center"/>
                    <Entry Grid.Column="1"
                           Placeholder="Confirm New Password"
                           IsPassword="True"
                           PlaceholderColor="#999"
                           TextColor="Black"
                           FontSize="16"
                           Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <Label Text="Both passwords must match"
                   FontSize="12"
                   TextColor="#6A6A6A"
                   HorizontalOptions="Start"
                   Margin="10,0,0,0"/>

            <Border 
                StrokeShape="RoundRectangle 25" 
                StrokeThickness="0">
                <Border.Background>
                    <LinearGradientBrush 
                        EndPoint="1,0">
                        <GradientStop 
                            Color="#9638E0" 
                             
                            Offset="0.0"/>
                        <GradientStop 
                            Color="#7F00FF" 
                            Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button 
                        Text="UPDATE PASSWORD"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"/>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
