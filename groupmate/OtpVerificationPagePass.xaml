<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="groupmate.OtpVerificationPagePass"
             Title="OtpVerificationPagePass"
             BackgroundColor="#F5E9FF">
    <ScrollView>
        <VerticalStackLayout Padding="30,60" Spacing="25">

            <ImageButton Source="back.png"
                     HeightRequest="24"
                     WidthRequest="24"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Start"
                     Clicked="BackButton_Clicked" />
            <Label Text="Verification code sent"
               FontSize="26" 
               FontAttributes="Bold" 
               TextColor="#3D0066"
               HorizontalOptions="Center" />

            <Label Text="Please enter the verification code"
               FontSize="14" 
               TextColor="#5A5A5A"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"
               Margin="0,0,0,10"/>

            <Image 
               Source="indianguy.png" 
               HeightRequest="220"
               HorizontalOptions="Center" 
               Margin="0,10,0,0"/>

            <Border Stroke="#E0E0E0" 
                StrokeShape="RoundRectangle 25"
                BackgroundColor="White" 
                Padding="10">
                <Grid 
                ColumnDefinitions="Auto,*" 
                VerticalOptions="Center">
                    <Image 
                    Source="key.png" 
                    HeightRequest="20" 
                    VerticalOptions="Center"/>
                    <Entry x:Name="OtpEntry" 
                       Grid.Column="1" 
                       Placeholder="Enter code"
                       PlaceholderColor="#999" 
                       TextColor="Black"
                       FontSize="16" 
                       Margin="10,0,0,0"
                       Keyboard="Numeric" />
                </Grid>
            </Border>

            <HorizontalStackLayout 
            HorizontalOptions="Center">
                <Label Text="Didnâ€™t receive? " 
                   FontSize="14" 
                   TextColor="#6A0DAD"/>
                <Label Text="Resend code" 
                   FontSize="14" 
                   FontAttributes="Bold"
                   TextColor="#7F00FF">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer 
                        Tapped="Resend_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Border StrokeShape="RoundRectangle 25" StrokeThickness="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#7F00FF" Offset="0.0"/>
                        <GradientStop Color="#E100FF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button 
                    Text="VERIFY"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="25"
                    />
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>